<h1>入力フォーム</h1>

<%= form_with(model: @event, local: true) do |form| %>

  <div class="title">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

    <div class="start_time">
    <%= form.label :日時 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :詳細情報 %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>