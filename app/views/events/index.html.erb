<div class="calendar">
   <%= link_to 'イベントを追加', new_event_path, class: :add__calendar %>
</div>
<% @events.each do |event| %>
  <table>
    <tbody>
      <tr>
        <th><%= event.title %></th>
        <td><%= l event.start_time %></td>
        <td><%= link_to 'Show', event_path(event.id) %></td>
        <td><%= link_to 'Edit', edit_event_path(event.id) %></td>
        <td><%= link_to 'Destroy',event_path(event.id), method: :delete %></td> 
      </tr>
    </tbody>
  </table>
<% end %>
<%= month_calendar events: @events do |date, events| %>
   <%= date.day %>
<% events.each do |event| %>
    <div>
      <%= event.title %>
    </div>
  <% end %>
<% end %>

