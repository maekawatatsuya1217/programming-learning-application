<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @blog.title %>
      </p>
      <%= link_to @blog.user.name, root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @blog.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_blog_path(@blog), class: :prototype__btn %>
          <%= link_to "削除する", blog_path(@blog), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @blog.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @blog.catch %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">記事</p>
          <p class="detail__message">
            <%= @blog.article %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
