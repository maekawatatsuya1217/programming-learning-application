<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="show__header">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <% if user_signed_in? && current_user.id == @user.id %>
        <div class="user__edit__parent">
          <%= link_to "編集", edit_user_path(@user.id), class: :user__edit__child %>
        </div>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= safe_join(@user.profile.split("\n"),tag(:br)) %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading user__name">
        <%= "#{@user.name}さんの記事一覧"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'blogs/blog', collection: @blogs %>
      </div>
    </div>
  </div>
</div>