<div class="card">
  <%= link_to image_tag(forms.image, class: :card__img ), root_path %>
  <div class="card__body">
    <%= link_to forms.day, root_path, class: :card__title %>
    <p class="card__summary">
      <%= forms.time %>
    </p>
    <%= link_to forms.user.name, root_path, class: :card__user %>
  </div>
</div>