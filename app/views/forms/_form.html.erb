<%= form_with model: @form, local: true do |f|%>

<%= render 'devise/shared/error_messages', model: f.object %>

  <div class='day-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :day,
                    class:'select-day',
                    id:"learning_day",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year - 0),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>

  <%= f.label :time, "学習時間" %><br />
  <%= f.time_field :time, class: 'form-control', id: 'time' %>

  <div class="field">
    <%= f.label :good, "良かったところ" %><br />
    <%= f.text_area :good, class: :form__text, id:"form_good" %>
  </div>

  <div class="field">
    <%= f.label :bad, "上手くいかなかった点" %><br />
    <%= f.text_area :bad, class: :form__text, id:"form_bad", size: "10x30" %>
  </div>

  <div class="field">
    <%= f.label :improvement, "明日からの改善案" %><br />
    <%= f.text_area :improvement, class: :form__text, id:"form_improvement", size: "10x30" %>
  </div>

  <div class="field">
    <%= f.label :image, "フォームの画像" %><br />
    <%= f.file_field :image, id:"blog_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>